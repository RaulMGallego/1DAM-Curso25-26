#!/bin/bash

# Activar kernel de Bash
python -m bash_kernel.install

# Instalar Java kernel (IJava)
mkdir -p /tmp/ijava
cd /tmp/ijava
wget https://github.com/SpencerPark/IJava/archive/refs/heads/master.zip
unzip master.zip
cd IJava-master
./gradlew installKernel --kernelInstallDir=$HOME/.local/share/jupyter/kernels
cd ~
rm -rf /tmp/ijava

# Verificar instalaci√≥n
jupyter kernelspec list

